<!--vista de un solo producto-->
<!DOCTYPE html>
<html>

<head>
  <%- include('partials/head.ejs') %>

  <style>
    .producto-container {
      margin: auto;
      width: 70%;
      padding: 10px;
    }

    .producto-desc {
      margin: 25px;

    }

    .button {
      border: none;
      color: white;
      padding: 15px 32px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      margin: 4px 2px;
      cursor: pointer;
    }

    div p,
    div h3,
    div h2 {
      color: black;
    }

    .button1 {
      background-color: red;
    }

    /* Green */
    .button2 {
      background-color: #008CBA;
    }

    .button-div {
      margin: auto;


    }
  </style>
</head>

<body>
  <%- include('partials/header.ejs') %>

  <div class="container">
    <div class="row" style="margin: 3% ;">
      <div class="col-sm" style="margin: auto;">



        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="/images/productos/<%= product.image %>" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="/images/productos/<%= product.image %>" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="/images/productos/<%= product.image %>" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" style="color: blue;" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>


      <div class="col-sm">

        <p>Producto <%= product.id %></p>
        <h1><%= product.name %></h1>
        <h3>Descripcion</h3>
        <p><%= product.description %>.</p>
        <!-- <h3>Categoria</h3>
      <p><%= product.category_id %> </p> -->
        <h3>Precio</h3>
        <h1>$<%= product.price %></h1>


        <% if(locals.user ){ %>

        <% if ( user.category_id == 1){ %>
        <div>
          <a href="/productos/<%= product.id %>/editar">
            <button class="button button2" type="button">
              Editar
            </button></a>

          <form method="POST" action="/productos/<%= product.id %>?_method=DELETE" method="POST">
            <button class="button button1" type="submit">
              <a>Eliminar</a>
            </button>
          </form>
        </div>
        <% }  else {%>
        <div class="button-div">
          <a href="/productos/carrito">
            <button class="button button2" type="button">
              Comprar
            </button>
          </a>
        </div>

        <% } } else {%>

        <div>
          <a href="/users/login">
            <button class="button button2" type="button">
              Comprar
            </button>
          </a>
        </div>
        <% } %>
      </div>


    </div>

    <h1 style="margin: 30px;">Calificaciones</h1>

    <div class="row row-cols-1 row-cols-md-3">
      <div class="col mb-4">
        <div class="card h-100">
          <!-- <img src="..." class="card-img-top" alt="..."> -->
          <div class="card-body">
            <h5 class="card-title"> &starf; &starf; &starf; &starf; &star; </h5>
            <p class="card-text">Cumple lo que promete. La calidad no es la mejor pero para mi esta bien.</p>
          </div>
        </div>
      </div>
      <div class="col mb-4">
        <div class="card h-100">
          <!-- <img src="..." class="card-img-top" alt="..."> -->
          <div class="card-body">
            <h5 class="card-title"> &starf; &starf; &starf; &starf; &star; </h5>
            <p class="card-text">A mi me gust√≥. El envio llego en tiempo y forma.</p>
          </div>
        </div>
      </div>
      <div class="col mb-4">
        <div class="card h-100">
          <!-- <img src="..." class="card-img-top" alt="..."> -->
          <div class="card-body">
            <h5 class="card-title">&starf; &starf; &star; &star; &star;</h5>
            <p class="card-text">No lo recomiendo. No cumple las espectativas</p>
          </div>
        </div>
      </div>
      <div class="col mb-4">
        <div class="card h-100">
          <!-- <img src="..." class="card-img-top" alt="..."> -->
          <div class="card-body">
            <h5 class="card-title">&starf; &starf; &starf; &star; &star; </h5>
            <p class="card-text">Buena relacion entre el precio y la calidad.</p>
          </div>
        </div>
      </div>
    </div>
  </div>




  <%- include('partials/footer.ejs') %>
</body>

</html>